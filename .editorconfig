# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.rs]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[.gitmodules]
# .gitmodules file is automatically created and managed by git and this is the style it choose
indent_style = tab
indent_size = 2

